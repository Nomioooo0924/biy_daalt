@model hoolsitebiydaalt.Models.Food

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #c62828; /* Улаан өнгө */
        font-weight: 700;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    h3 {
        text-align: center;
        color: #b71c1c;
        margin-bottom: 25px;
        font-weight: 600;
    }

    h4 {
        color: #d32f2f;
        font-weight: 600;
        margin-bottom: 15px;
        border-bottom: 3px solid #ef9a9a;
        padding-bottom: 6px;
        text-align: center;
    }

    dl.row {
        max-width: 700px;
        margin: 0 auto 30px auto;
        background-color: #fff5f5;
        border-radius: 12px;
        padding: 25px 30px;
        box-shadow: 0 6px 20px rgba(198, 40, 40, 0.2);
    }

    dt.col-sm-2 {
        font-weight: 600;
        color: #b71c1c;
        text-align: right;
        padding-right: 15px;
        border-right: 1px solid #ffcdd2;
    }

    dd.col-sm-10 {
        color: #3a3a3a;
        padding-left: 20px;
        font-size: 1.1rem;
    }

    form {
        text-align: center;
    }

    input[type="submit"].btn-danger {
        font-weight: 600;
        padding: 10px 40px;
        border-radius: 8px;
        font-size: 1.1rem;
        transition: background 0.3s ease;
    }

        input[type="submit"].btn-danger:hover {
            background-color: #b71c1c;
        }

    a {
        margin-left: 15px;
        font-weight: 600;
        color: #b71c1c;
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #7f0000;
            text-decoration: underline;
        }

   
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Food</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
